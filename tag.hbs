{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    {{#tag}}
        <section class="gh-pagehead">
            <header class="gh-pagehead-content">
                <div class="gh-tag-label">{{t "Topic" }}</div>

                <h1 class="gh-tag-name gh-pagehead-title">{{name}}</h1>

                <div class="gh-tag-description gh-pagehead-description">
                    {{#if description}}
                        {{description}}
                    {{else}}
                        {{t "A collection of" }} {{plural ../pagination.total empty=(t "0 posts") singular=(t "1 post") plural=(t "% posts")}}
                    {{/if}}
                </div>
            </header>
        </section>
    {{/tag}}

    <div class="gh-feed">
        {{#foreach posts}}
            {{> loop}}
        {{/foreach}}
    </div>

    <button class="gh-loadmore gh-btn">{{t "Load more posts" }}</button>
</main>
